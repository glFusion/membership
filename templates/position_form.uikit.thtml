{# begin {templatelocation} #}
<form action="{action_url}/index.php" method="post"
   class="pluginMembershipPlanForm uk-form uk-form-horizontal">
  <input type="hidden" name="id" value="{id}" />
  <input type="hidden" name="old_grp_id" value="{old_grp_id}" />
  <input type="hidden" name="old_uid" value="{old_uid}" />
  <fieldset>

  <div class="uk-form-row">
    <label class="uk-form-label" for="descr">{$LANG_MEMBERSHIP['position']}:
      <i class="uk-icon uk-icon-question-circle tooltip" title="{$LANG_MEMBERSHIP_HELP['pos_name']}"></i>
    </label>
    <div class="uk-form-controls">
      <input type="text" id="descr" name="descr" value="{description}" />
    </div>
  </div>

  <div class="uk-form-row">
    <label class="uk-form-label" for="pos_type_sel">{$LANG_MEMBERSHIP['position_type']}:
      <i class="uk-icon uk-icon-question-circle tooltip" title="{$LANG_MEMBERSHIP_HELP['pos_type']}"></i>
    </label>
    <div class="uk-form-controls">
    <select id="pos_type_sel" name="position_type_sel">
      {position_type_select}
    </select>
    &nbsp;&nbsp;Or create:
    <input type="text" name="position_type" value="" 
        size="32" maxlength="32" />
    </div>
  </div>

  <div class="uk-form-row">
    <label class="uk-form-label" for="uid">{$LANG_MEMBERSHIP['current_user']}:
      <i class="uk-icon uk-icon-question-circle tooltip" title="{$LANG_MEMBERSHIP_HELP['pos_user']}"></i>
    </label>
    <div class="uk-form-controls">
    <select id="uid" name="uid">
      <option value="0">--- {$LANG_MEMBERSHIP['vacant']} ---</option>
      {option_user_select}
    </select>
    </div>
  </div>

  <div class="uk-form-row">
    <label class="uk-form-label" for="contact">{$LANG_MEMBERSHIP['contact_info']}:
      <i class="uk-icon uk-icon-question-circle tooltip" title="{$LANG_MEMBERSHIP_HELP['pos_contact']}"></i>
    </label>
    <div class="uk-form-controls">
    <textarea id="contact" name="contact">{contact}</textarea>
    </div>
  </div>

  <div class="uk-form-row">
    <label class="uk-form-label" for="orderby">{$LANG_MEMBERSHIP['order']}:
      <i class="uk-icon uk-icon-question-circle tooltip" title="{$LANG_MEMBERSHIP_HELP['pos_order']}"></i>
    </label>
    <div class="uk-form-controls">
    <input id="orderby" type="text" name="orderby" value="{orderby}" 
        size="6" maxlength="6" />
    </div>
  </div>

  <div class="uk-form-row">
    <label class="uk-form-label" for="enabled">{$LANG_MEMBERSHIP['enabled']}?
      <i class="uk-icon uk-icon-question-circle tooltip" title="{$LANG_MEMBERSHIP_HELP['pos_ena']}"></i>
    </label>
    <div class="uk-form-controls">
    <input id="enabled" type="checkbox" name="enabled" value="1" {ena_chk} />
    </div>
  </div>

  <div class="uk-form-row">
    <label class="uk-form-label" for="show_vacant">{$LANG_MEMBERSHIP['show_vacant']}:
      <i class="uk-icon uk-icon-question-circle tooltip" title="{$LANG_MEMBERSHIP_HELP['pos_show_vacant']}"></i>
    </label>
    <div class="uk-form-controls">
    <input type="checkbox" id="show_vacant" name="show_vacant" value="1" {show_vacant_chk} />
    </div>
  </div>

  <div class="uk-form-row">
    <label for="grp_id" class="uk-form-label">
      {$LANG_ACCESS['group']}
      <i class="uk-icon uk-icon-question-circle tooltip" title="{$LANG_MEMBERSHIP_HELP['pos_group']}"></i>
    </label>
    <div class="uk-form-controls">
    <select id="grp_id" name="grp_id">
      <option value="0">-- None --</option>
      {grp_select}
    </select>
    </div>
  </div>

  <div class="uk-form-row" align="center">
    <div class="uk-form-controls">
      <button type="submit" class="uk-button uk-button-success" name="saveposition" value="{$LANG_ADMIN['save']}">{$LANG_ADMIN['save']}</button>
      <button type="reset" class="uk-button">{$LANG_MEMBERSHIP['reset']}</button>
      <button type="submit" class="uk-button uk-button-danger" name="deleteposition" value="{$LANG_ADMIN['delete']}"
        onclick="return confirm('{$LANG_MEMBERSHIP['q_del_item']}');">{$LANG_ADMIN['delete']}</button>
      <button type="submit" class="uk-button uk-button-primary" name="positions" value="{$LANG_ADMIN['cancel']}">{$LANG_ADMIN['cancel']}</button>
    </div>
  </div>

</form>
{# end {templatelocation} #}
